<div 
	class="search-block-form contextual-region med:justify-end max-tab:justify-center display-flex 
	max-med:grow-1 max-tab:right-3px position-relative med:mr-lg min-lg:mr-xl max-mob:display-none ml-xs left-4px" 
	data-drupal-selector="search-block-form" 
	id="block-weightvest-running-search-form-narrow" 
	role="search">

	<div 
		data-contextual-id="block:block=weightvest_running_search_form_narrow:langcode=en" data-contextual-token="kZxEfy74E4vwddqkIYhAode7_5wuU6rU3Hk5Ktwdp3w" 
		data-drupal-ajax-container="" 
		data-once="contextual-render" 
		class="contextual">

		<button class="trigger focusable visually-hidden" type="button" aria-pressed="false">
			Open configuration options
		</button>

			<ul class="contextual-links" hidden="">
				<li>
					<a href="/admin/structure/block/manage/weightvest_running_search_form_narrow?destination=/node/9">Configure block</a>
				</li>
				<li>
					<a href="/admin/structure/block/manage/weightvest_running_search_form_narrow/delete?destination=/node/9">Remove block</a>
				</li>
			</ul>
	</div>
  
	<div id="search-form-inner-wrapper" class="display-flex items-center justify-center">

		{% if query_term %}
			<h2 class="font-large text-lg display-none" >Results for: "{{ query_term }}"</h2>
		{% endif %}

		<div class="input-and-submit display-flex items-center justify-center">
			<div 
				class="js-form-item form-item js-form-type-search form-item-keys js-form-item-keys form-no-label">
				<label for="edit-keys" class="visually-hidden">Search</label>
				<input 
					title="Enter the terms you wish to search for." 
					data-drupal-selector="edit-keys" 
					type="search" 
					id="edit-keys" 
					name="s" 
					value="{{ query_term ? query_term : '' }}"
					size="15" 
					maxlength="128" 
					class="radius-xl border-default text-base px-md py-xs border-default border-md bg-background w-9 mr-xs max-tab:mr-0 max-tab:px-xs max-tab:sizing-border max-tab:text-md max-tab:position-relative max-tab:left-3px max-tab:w-9">
			</div>

			<div 
				data-drupal-selector="edit-actions" 
				class="form-actions js-form-wrapper form-wrapper" 
				id="edit-actions">

					<button type="submit" class="cursor-pointer text-xl w-3xl h-3xl text bg-background text-default transition-fast radius-full hover:text-orange med:right-2px max-tab:position-relative  max-tab:w-2xl mac-tab:h-2xl max-tab:left-3px max-tab:ml-xs">
						<i class="fas fa-search"></i>
					</button>

			</div>
		</div>
	</div>

</div>